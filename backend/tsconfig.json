{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "removeComments": true,
    "noImplicitAny": true,
    "paths": {
      "@/*": ["*"]
    },
    "baseUrl": "./src",
    "rootDir": "./src",
    "outDir": "dist",
    "lib": ["ESNext"],
    "types": ["node"],
    "typeRoots": ["node_modules/@types", "src/@types"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
