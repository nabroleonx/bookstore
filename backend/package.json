{
  "name": "bookstore-backend",
  "version": "1.0.0",
  "description": "A simple bookstore CRUD app made with PostgreSQL, TypeORM and Typescript",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "nodemon --exec ts-node src/index.ts",
    "start": "node dist/index.js",
    "lint": "eslint src --ext .ts --color -f table --fix",
    "format": "prettier --write \"**/*.ts\"",
    "seed": "ts-node src/utils/seeder.ts"
  },
  "author": "Abel Ayalew(@nabroleon)",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "pg": "^8.11.2",
    "reflect-metadata": "^0.1.13",
    "sequelize": "^6.32.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "ts-node": "^10.9.1",
    "typeorm": "^0.3.17",
    "typeorm-pagination": "^2.0.3",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.0.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/node": "^20.4.7",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^6.2.1",
    "@typescript-eslint/parser": "^6.2.1",
    "eslint": "^8.46.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-formatter-table": "^7.32.1",
    "eslint-plugin-prettier": "^5.0.0",
    "prettier": "^3.0.1",
    "typescript": "^5.1.6"
  }
}
